<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.bayonne.fr/fileadmin/_processed_/3/d/csm_Bayonne-_F%C3%AAtes_et_costumes__4__85ecaff821.jpg);">
  <div class="container2">
    <h1>Costumes BNB</h1>
    <p>Costumes BNB, THE website to rent a cool costume.</p>
  </div>
</div>
<div class="search d-flex justify-content-between">
<%= link_to "Create your costume offer", new_costume_path, :class => "btn btn-ghost" %>

<%= simple_form_for :search, url: costumes_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</div>
<div class="cards__index2">
  <% @costumes.first(16).each do |costume| %>
        <div class="card-infos2">
    <%= cl_image_tag costume.photos.first.key, class: "card-image2", crop: :fill %>

          <div>
            <h2><%= link_to costume.name, costume_path(costume) %></h2>
            <p> <%= costume.description %> </p>
          <h2 class="card-pricing"><%= costume.price %></h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-user2 avatar-bordered" />
          </div>
        </div>

  <% end %>
      </div>

<% end %>
<%= link_to "All the costumes", costumes_path, :class => "btn btn-ghost"  %>
