<h1 class="indextitle"><strong>Every Costume YOU'll ever need !</strong></h1>
<div class="mappy" style="width: 90%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="container2">
   <% @costumes.each do |costume| %>
      <div class="cards__index">

            <% if costume.photos.attached? %>
              <%= cl_image_tag costume.photos.first.key, class: "card-image"%>
            <% end %>
              <div class="card__home">
                <div class="descriname">
                  <h2><%= link_to costume.name, costume_path(costume) %></h2>
                  <p> <%= costume.description %> </p>
                </div>
                <div class="avaprice">
                  <h3 class="card-pricing">Price: <%= costume.price %> â‚¬/day</h3>
                  <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-user avatar-bordered" />
              </div>
            </div>
        </div>
      <% end %>
</div>
