<h1>Costumes a Marseille</h1>
<div class="container">
      <div class="cards__index">
        <% @costumes.each do |costume| %>
              <% if costume.photos.attached? %>
                <%= cl_image_tag costume.photos.first.key, width: 350, crop: :fill %>
              <% end %>
          </div>
          <div class="card-infos">

            <div>
              <h2><%= link_to costume.name, costume_path(costume) %></h2>

              <p> <%= costume.description %> </p>
            <h2 class="card-pricing"><%= costume.price %></h2>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-user avatar-bordered" />
            </div>
          </div>
        <% end %>
      </div>
      <%# <div>
        <img id="map" src='https://raw.githubusercontent.com/lewagon/fullstack-images/master/frontend/map-static.png'>
      </div> %>
</div>
