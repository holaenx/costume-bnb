
<h1>Modify your Costume offer</h1>
<div class="container3">
  <div class="form_container">
  <div class="image-form">
<% @costume.photos.each do |photo| %>
<%= cl_image_tag photo.key, width: 350, crop: :fill %>
</div>
<% end %>
<%= simple_form_for @costume do |f| %>
  <%= f.input :name %>
  <%= f.input  :description%>
  <%= f.input :size, :collection => %w[XS S L XL XXL] %>
  <%= f.input  :city%>
  <%= f.input :price %>
  <%= f.submit 'Edit my costume', :class => 'btn btn-ghost' %>
<% end %>
<%= link_to "Back to Costume", costume_path(@costume), :class => "btn btn-ghost"  %>
 </div>
</div>
