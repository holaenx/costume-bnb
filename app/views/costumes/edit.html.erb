<h1>Modify your Costume offer</h1>
<%= simple_form_for @costume do |f| %>
  <%= f.input :name %>
  <%= f.input  :description%>
  <%= f.input :size, placeholder:"XS,S,M,L,XL,XXL"%>
  <%= f.input  :city%>
  <%= f.input :price %>
  <%= f.submit%>
<% end %>
<button><%= link_to "Retour au costume", costume_path(@costume)  %></button>
